<div class="container">
<% if @article.errors.any? %>
 <h2>Folowing Error message is occuring </h2>
 <ul>
 	<% @article.errors.full_messages.each do|msg| %>
 	 <li><%= msg %> </li>
 	 <%end%>
 	</ul>
 	<%end%>
<%=form_with model: @article, class:"shadow-lg p-3 mb-5 bg-white rounded" do |form| %>
<div class="mb-3">

	<%= form.label :title,class:"form-label" %><br> 
	<%= form.text_field :title,class:"form-control change" %>

</div>
<p>
	<%= form.label :Description,class:"form-label" %><br> 
	<%= form.text_area :description,class:"form-control change" %>
</p>
<%= form.label :'Article Category',class:"form-label" %><br> 
<%= form.collection_select :category_ids, Category.all, :id, :name, {:prompt => "Please Select a Category"}, {:multiple => true, class:"form-control"} %>

<p>
	<%= form.submit %>
</p>
<%end %>
</div>