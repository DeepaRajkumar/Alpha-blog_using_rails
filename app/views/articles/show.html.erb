<h1>Welcome to showpage</h1>
<p>Title:<%= @article.title %></p>
<p>Description:<%= @article.description %></p>

<div>
<%= link_to "Edit", edit_article_path(@article) ,class:"btn btn-primary"%></li>
  <%= button_to "Destroy", article_path(@article), class:"btn btn-primary",method: :delete %></li>
</div>



<h2>show a comment:</h2>
<% @article.comments.each do |comment| %>
  
     <div class="name font-weight-bolder"><%= comment.commenter %>:</div>
     <div class="content"> <%= comment.body %></div>
    
   
<% end %>



<h2>Add a comment:</h2>
<%= form_with(model:  [@article, @article.comments.build]) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <%= link_to "Destroy Comment", article_comment_path(@article,@article.comments) ,method: :delete %>
<% end %>

